{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2018",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES2018"
    ],
    "paths": {
      "@wasm/*": ["src/wasm-pkg/*"]
    }
  },
  "include": [
    "**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "wasm"
  ]
}
